# MESS WALLAH - Backend Environment Variables
# COPY THIS FILE TO: .env

# ==========================================
# 1. CORE CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=5001
BASE_URL=http://localhost:5001
# Production: https://mess-wallah-backend.onrender.com

# Frontend URL (CORS)
# Production: https://frontend-pearl-mu-12.vercel.app
FRONTEND_URL=http://localhost:5173
CLIENT_URL=http://localhost:5173 
ALLOWED_ORIGINS=http://localhost:5173,https://frontend-pearl-mu-12.vercel.app

# ==========================================
# 2. DATABASE (MongoDB Atlas)
# ==========================================
# Local: mongodb://localhost:27017/mess-wallah
# Production: mongodb+srv://<user>:<password>@cluster.mongodb.net/mess-wallah
MONGODB_URI=mongodb://localhost:27017/mess-wallah

# ==========================================
# 3. SECURITY (Critical)
# ==========================================
# Generate new random strings for production!
JWT_SECRET=super_secret_jwt_key_dev_only
JWT_EXPIRE=7d
SESSION_SECRET=super_secret_session_key_dev_only
BCRYPT_ROUNDS=10

# ==========================================
# 4. OTP & SMS SERVICES (Pick One)
# ==========================================

# OPTION A: Fast2SMS (Cheapest / Best for India)
# Get key: https://www.fast2sms.com/
FAST2SMS_API_KEY=

# OPTION B: Twilio (Premium / Global)
# Get key: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_VERIFY_SERVICE_SID=
TWILIO_PHONE_NUMBER=

# NOTE: If neither is set, OTP falls back to Dev Mode (Code: 123456)

# ==========================================
# 5. AUTHENTICATION PROVIDERS
# ==========================================

# Google OAuth
# Get credentials: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Local: http://localhost:5001/api/auth/google/callback
# Production: https://mess-wallah-backend.onrender.com/api/auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# ==========================================
# 6. EXTERNAL SERVICES
# ==========================================

# Razorpay (Payments)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# SendGrid (Email)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@messwallah.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
