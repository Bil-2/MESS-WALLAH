PAYMENT_RATE_LIMIT_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Redis Configuration (Optional - for session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://yourdomain.com/csp-report

# API Keys for External Services
GOOGLE_MAPS_API_KEY=AIzaSyDCb-9PghTevSbefneNailhGYC7lBWs5N8
FIREBASE_SERVER_KEY=your_firebase_server_key

# Development/Testing
DEBUG_MODE=false
ENABLE_SWAGGER=true
API_VERSION=v1

# Production Security (Set these in production)
SECURE_COOKIES=true
TRUST_PROXY=true
FORCE_HTTPS=true

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
ANALYTICS_API_KEY=your_analytics_api_key

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
BACKUP_SCHEDULE=0 2 * * *

# Feature Flags
ENABLE_PAYMENT_GATEWAY=true
ENABLE_SMS_OTP=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_BIOMETRIC_AUTH=false

# Performance Configuration
MAX_FILE_SIZE_MB=10
MAX_REQUEST_SIZE_MB=10
CONNECTION_TIMEOUT_MS=30000
REQUEST_TIMEOUT_MS=30000

# Security Monitoring
ENABLE_SECURITY_LOGGING=true
ENABLE_AUDIT_TRAIL=true
ENABLE_INTRUSION_DETECTION=true
ALERT_EMAIL=security@messwallah.com

# Database Security
DB_SSL_ENABLED=false
DB_AUTH_SOURCE=admin
DB_CONNECTION_TIMEOUT=10000
DB_MAX_POOL_SIZE=10

# API Security
API_KEY_HEADER=X-API-Key
API_VERSION_HEADER=X-API-Version
REQUIRE_API_KEY=false

# Content Security
MAX_UPLOAD_FILES=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf
SCAN_UPLOADS_FOR_MALWARE=true

# Geographic Security
ALLOWED_COUNTRIES=IN,US,GB
BLOCKED_COUNTRIES=
GEO_BLOCKING_ENABLED=false

# Time-based Security
LOGIN_TIME_RESTRICTIONS=false
ALLOWED_LOGIN_HOURS=6-22
TIMEZONE=Asia/Kolkata

# Advanced Security Features
ENABLE_HONEYPOT=false
ENABLE_CAPTCHA=true
CAPTCHA_SITE_KEY=your_recaptcha_site_key
CAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Compliance
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
