# MESS WALLAH - Frontend Environment Variables
# COPY THIS FILE TO: .env.local

# ==========================================
# 1. API CONNECTION
# ==========================================
# Local: http://localhost:5001
# Production: https://mess-wallah.onrender.com/api (Note: /api suffix)
VITE_API_URL=http://localhost:5001

# ==========================================
# 2. PUBLIC KEYS (Safe for Frontend)
# ==========================================

# Google Auth Client ID (Same as Backend)
VITE_GOOGLE_CLIENT_ID=

# Razorpay Key ID (NOT Secret!)
VITE_RAZORPAY_KEY_ID=

# Firebase (Optional)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# ==========================================
# 3. APP CONFIGURATION
# ==========================================
VITE_APP_NAME="MESS WALLAH"
VITE_ENABLE_DARK_MODE=true
VITE_DEBUG_MODE=false
